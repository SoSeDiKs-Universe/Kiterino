Subject: [PATCH] Don't eject players from boat underwater automatically


diff --git a/src/main/java/net/minecraft/world/entity/vehicle/Boat.java b/src/main/java/net/minecraft/world/entity/vehicle/Boat.java
index 798b9a9eb78dfe0caff1ee8b62c25d2001c2defc..4be6587f78ee005786d06f3509df281abe00bcd3 100644
--- a/src/main/java/net/minecraft/world/entity/vehicle/Boat.java
+++ b/src/main/java/net/minecraft/world/entity/vehicle/Boat.java
@@ -356,7 +356,15 @@ public class Boat extends Entity implements VariantHolder<Boat.Type> {
         }
 
         if (!this.level.isClientSide && this.outOfControlTicks >= 60.0F) {
-            this.ejectPassengers();
+            // Kiterino start - Don't eject players
+            //this.ejectPassengers();
+            for (int i = this.passengers.size() - 1; i >= 0; --i) {
+                Entity passenger = this.passengers.get(i);
+                if (!(passenger instanceof Player)) {
+                    passenger.stopRiding();
+                }
+            }
+            // Kiterino end
         }
 
         if (this.getHurtTime() > 0) {
