+			case ADD_PLAYERS_TO_TEAM, REMOVE_PLAYERS_FROM_TEAM -> {
+				var operation = (teamMode == TeamMode.ADD_PLAYERS_TO_TEAM)  ?  Action.ADD: Action.REMOVE;
+				yield ClientboundSetPlayerTeamPacket.createPlayerPacket(nmsTeam, "", operation);
+			}
+		};
